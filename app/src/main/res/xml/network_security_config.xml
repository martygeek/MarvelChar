<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
  <domain-config>
    <domain includeSubdomains="true">sb1.allegiantair.com</domain>
    <domain includeSubdomains="true">sb2.allegiantair.com</domain>
    <domain includeSubdomains="true">in1.allegiantair.com</domain>
    <domain includeSubdomains="true">in2.allegiantair.com</domain>
    <domain includeSubdomains="true">qa1.allegiantair.com</domain>
    <domain includeSubdomains="true">qa2.allegiantair.com</domain>
    <domain includeSubdomains="true">fes.devshare.allegiantair.com</domain>
    <trust-anchors>
      <!-- Trust preinstalled CAs -->
      <certificates src="system"/>
      <!-- Additionally trust user added CAs -->
      <certificates src="user"/>
    </trust-anchors>
  </domain-config>
</network-security-config>
